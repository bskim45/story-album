<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/item_list_main_image"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_toRightOf="@id/item_list_main_image"
        android:id="@+id/item_list_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_below="@id/item_list_main_title"
        android:layout_toRightOf="@id/item_list_main_image"
        android:id="@+id/item_list_main_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016년 9월 1일 0시 0분"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
</RelativeLayout>